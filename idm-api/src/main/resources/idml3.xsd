  <xs:complexType name="distanceCheck">
    <xs:annotation>
      <xs:documentation>
        TO-DO
      </xs:documentation>
    </xs:annotation>
    <xs:complexContent>
      <xs:extension base="checkBase">
        <xs:attribute name="min" type="expression">
          <xs:annotation>
